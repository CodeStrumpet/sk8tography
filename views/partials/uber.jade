
div.container-fluid.page
  div#main.row-fluid
    div
      youtube-video-player(playlist="playlist", playstate="playstate")
    div.well.scroller-table
      div.outer
        div.inner
          table.table
            tr
              td(ng-repeat="clip in playlist.items", mouseover="activeclip", ng-class="playlist.position == $index ? 'selectedclip' : ''", ng-click="selectClip($index)")
                img(src="{{'./images/' + clip.thumbFileName}}")


        h2 {{playlist.items[playlist.position].skaterRef.name}}
        div(ng-repeat="trick in playlist.items[playlist.position].tricks")
            h3 {{trick.trickTypeRef.name}}
  div#side
    span.input-append.btn-group.dropdown
      input(id="appendedInputButton", 
        ng-model="currSearch.searchText",
        type="text",
        placeholder="Choose Skater",
        typeahead="value.name for value in skaterTypeahead($viewValue)", 
        typeahead-on-select='skaterSelected($item)',
        on-blur="skatersTypeaheadBlur($index)").span3
      a(href="#", data-toggle="dropdown").btn.btn-primary.dropdown-toggle
        span.caret
      ul.dropdown-menu
        li(ng-repeat="skater in skaters")
          a(ng-click="updateClipsWithSkaterChoice(skater)") {{skater.name}}
    table.table
      tr(ng-repeat="clip in searchClips", mouseover="activeclip", ng-class="playlist.position == $index ? 'selectedclip' : ''", ng-click="playSearchResult($index)")
        td.add-button-column 
          span(ng-click="addClipToPlaylist(clip); $event.stopPropagation();").icon-plus-sign.icon-3x.addVideoControl
        td            
          img(src="{{'./images/' + clip.thumbFileName}}")

        td
          p(ng-repeat="trick in clip.tricks")
            {{trick.trickTypeRef.name}}
      